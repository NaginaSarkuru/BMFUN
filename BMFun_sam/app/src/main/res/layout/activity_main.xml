<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mcflurry.bmfun.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/upperLinear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_weight="1"
                android:background="@drawable/background"
                />
            <!--android:contentDescription="kiminonawa"-->
            <!--app:srcCompat="@drawable/kiminonawa"-->
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_weight="1"
                android:background="@drawable/background"/>
            <!--android:contentDescription="pixelcat"-->
            <!--app:srcCompat="@drawable/cat"-->
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_weight="1"
                android:background="@drawable/background"/>
            <!--android:contentDescription="simpson"-->
            <!--app:srcCompat="@drawable/simpson"-->
            <!--<ImageView-->
                <!--android:id="@+id/iv4"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="100dp"-->

                <!--android:layout_weight="1"/>-->
            <!--android:contentDescription="chucklefish"-->
            <!--app:srcCompat="@drawable/chuckle"-->
            <!--<ImageView-->
                <!--android:id="@+id/iv5"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="100dp"-->

                <!--android:layout_weight="1"/>-->
            <!--&lt;!&ndash;android:contentDescription="junimo"&ndash;&gt;-->
            <!--&lt;!&ndash;app:srcCompat="@drawable/junimo"&ndash;&gt;-->

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLinear"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Bagai isi dengan"
            android:textSize="18sp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="_"

            android:textSize="18sp"
            android:layout_weight="3"/>

        <!--<TextView-->
            <!--android:id="@+id/tvSuccess"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="20sp" />-->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvMaksud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="HINT"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Next"
            android:id="@+id/btnNext"/>


    </LinearLayout>


</LinearLayout>


